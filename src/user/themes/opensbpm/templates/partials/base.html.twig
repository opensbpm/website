<!DOCTYPE html>
<html lang="{{ (grav.language.getActive ?: grav.config.site.default_lang)|e }}">
    <head>
        {% block head %}
            <meta charset="utf-8" />
            <title>{% if header.title %}{{ header.title|e }} | {% endif %}{{ site.title|e }}</title>

            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            {% include 'partials/metadata.html.twig' %}

            <link rel="icon" type="image/png" href="{{ url('theme://images/logo.svg')|e }}" />
            <link rel="canonical" href="{{ page.canonical(true)|e }}" />
        {% endblock head %}

        <!-- Bootstrap CSS -->
        {% do assets.addCss('theme://css-compiled/opensbpm.css', 100) %}
        {% do assets.addCss('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', 99) %}
        {% do assets.addCss('theme://css/github-corner.css', 97) %}        
        {% block stylesheets %}
        {% endblock %}

        {# {% do assets.addJs('jquery', 100) %} #}
        {% do assets.addJs('theme://js-compiled/bootstrap.bundle.min.js', { group: 'bottom'}) %}
        {% block javascripts %}
        {% endblock %}

        {% block assets deferred %}
            {{ assets.css()|raw }}
            {{ assets.js()|raw }}
        {% endblock %}
    </head>
    <body class="{{ page.header.body_classes|e }}">

        {% block header %}
            <header class="navbar navbar-expand-md navbar-light">
                <nav class="container-fluid flex-wrap flex-md-nowrap">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu" aria-controls="mainMenu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <a class="navbar-brand " href="{{ home_url|e }}">
                        <img src="{{ url('theme://images/logo.svg')|e }}" alt="{{ config.site.title|e }} Logo" id="logo" class="d-inline-block align-text-bottom">
                        <span class="fs-2">{{ config.site.title|e }}</span>
                    </a>

                    <div class="collapse navbar-collapse" id="mainMenu">
                        {% include 'partials/navigation.html.twig' %}
                    </div>
                </nav>
            </header>
        {% endblock %}

        <main class="container-fluid vh-100">
            {% block body %}
                {% block content %}{% endblock %}
            {% endblock %}
        </main>

        {% block footer %}
            <footer>
                <nav>
                    <ul>
                        {% for p in pages.find('/footer').children if p != page and p.visible == true %}
                            <li><a href="{{ p.url|e }}">{{ p.title|e }}</a></li>
                            {% endfor %}
                    </ul>
                </nav>
                <div class="text-center">
                    <p>
                        <a href="https://opensbpm.org">OpenSBPM</a> is using <a href="https://getgrav.org" target="_blank">Grav</a> 
                        and was <i class="fa fa-code pulse"></i> with <i class="fa fa-heart"></i> by <a href="https://github.com/sedstef">Stefan Sedelmaier</a>.
                    </p>
                </div>
            </footer>
        {% endblock %}

        <!-- Github Corners see https://github.com/tholman/github-corners -->        
        <a href="https://github.com/opensbpm/engine" class="github-corner" aria-label="View source on GitHub">
            <svg width="128" height="128" viewBox="0 0 250 250" style="fill:#1c0c5b; color:#fff; position: absolute; top: 0; border: 0; right: 0;" aria-hidden="true">
            <path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"/>
            <path d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2" 
                  fill="currentColor" style="transform-origin: 130px 106px;" class="octo-arm"/>
            <path d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z" 
                  fill="currentColor" class="octo-body"></path>
            </svg>
        </a>


        {% block bottom %}
            {{ assets.js('bottom')|raw }}
        {% endblock %}

    </body>
</html>
